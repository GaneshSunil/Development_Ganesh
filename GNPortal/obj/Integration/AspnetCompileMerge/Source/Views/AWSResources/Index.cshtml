@model IEnumerable<GenomeNext.Data.EntityModel.AWSResource>

@{
    ViewBag.Title = "AWS Resources";
}

<h2>
    <span class="glyphicon glyphicon-cloud gn-green"></span>
    @ViewBag.Title
    <span class="pull-right">
        @Html.BootstrapActionButton("Create New", "Create", "AWSResources", new RouteValueDictionary(new { organizationId = Request["organizationId"] }), "info", "plus")
    </span>
</h2>

@Html.BootstrapRowSpacer()

<div class="table-responsive">
    <table class="table table-hover table-bordered table-gn">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ARN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AWSConfig.AWSAccessKeyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AWSResourceType.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ARN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AWSConfig.AWSAccessKeyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AWSResourceType.Name)
                </td>
                <td>
                    @Html.BootstrapActionButton("View", "Details", "AWSResources", new RouteValueDictionary(new { id = item.Id }), "success", "th-large", "sm")
                    @Html.BootstrapActionButton("Edit", "Edit", "AWSResources", new RouteValueDictionary(new { id = item.Id }), "warning", "cog", "sm")
                    @Html.BootstrapActionButton("Delete", "Delete", "AWSResources", new RouteValueDictionary(new { id = item.Id }), "danger", "trash", "sm")
                </td>
            </tr>
        }

    </table>
</div>