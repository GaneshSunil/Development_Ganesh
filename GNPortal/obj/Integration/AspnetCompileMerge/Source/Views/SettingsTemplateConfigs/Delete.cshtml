@model GenomeNext.Data.EntityModel.GNSettingsTemplateConfig

@{
    ViewBag.Title = "Delete";
}

<h2>
    <span class="glyphicon glyphicon-wrench gn-green"></span>
    @ViewBag.Title
    <span class="pull-right">
        @Html.BootstrapActionButton("Back to Template", "Details", "SettingsTemplate", new RouteValueDictionary(new { id = Request["templateId"] }), "info", "chevron-right", null, true)
    </span>
</h2>

@Html.BootstrapRowSpacer()

<div class="form-horizontal">
    <h4>Please confirm you want to delete this record:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreateDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDateTime)
        </dd>

        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("templateId", Request["templateId"])

                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                    Delete
                </button>
            }
        </dd>
    </dl>

</div>