@model GenomeNext.Data.EntityModel.AWSComputeEnvironment

@{
    ViewBag.Title = "Delete AWS Compute Environment";
}

<h2>
    <span class="glyphicon glyphicon-cloud gn-green"></span>
    @ViewBag.Title
    <span class="pull-right">
        @Html.BootstrapFormConfirmDeleteButton("Delete", "trash", "danger")
        @Html.BootstrapActionButton("Back to List", "Index", "AWSComputeEnvironments", null, "info", "chevron-right", null, true)
    </span>
</h2>

@Html.BootstrapRowSpacer()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h4>Please confirm you want to delete this record:</h4>
        <hr />
        <dl class="dl-horizontal">

            @Html.DisplayFieldFor(model => model.Id)
            @Html.DisplayFieldFor(model => model.AWSConfigId)
            @Html.DisplayFieldFor(model => model.VPC)
            @Html.DisplayFieldFor(model => model.Subnet)
            @Html.DisplayFieldFor(model => model.AvailZone)
            @Html.DisplayFieldFor(model => model.MaxInstanceRequiredPerAnalysis)
            @Html.DisplayFieldFor(model => model.MaxInstanceExpectedCount)
            @Html.DisplayFieldFor(model => model.IPAvailCount)
            @Html.DisplayFieldFor(model => model.InstanceRunningCount)
            @Html.DisplayFieldFor(model => model.InstancePendingCount)

            @{
                ViewData["ViewMode"] = "Details";
                ViewData["CreatedBy"] = Model.CreatedByContact;
                ViewData["CreateDateTime"] = Model.CreateDateTime;
            }
            @Html.Partial("_AuditModelPartial", null, ViewData)

        </dl>

    </div>
}