@model GenomeNext.Data.EntityModel.GNSharedPurchaseOrderOrganization

@{
    ViewBag.Title = "Edit Record";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h2>
        <span class="glyphicon glyphicon-wrench gn-green"></span>
        @ViewBag.Title

        <span class="pull-right">
            @Html.BootstrapActionButton("Back to List", "Index", "SharedPurchaseOrderOrganizations", null, "info", "chevron-left")
            @Html.BootstrapFormSaveButton()
        </span>
    </h2>

    @Html.BootstrapRowSpacer()

    <div class="form-horizontal">        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-4" for="Notes">Invoice</label>            
            <div class="col-md-8" style="width:40em;">
                @Html.DropDownList("GNInvoiceId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GNInvoiceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4" for="Notes">Purchase Order</label>            
            <div class="col-md-8">
                @Html.DropDownList("GNPurchaseOrderId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GNPurchaseOrderId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4" for="Notes">Amount Billed on Invoice</label>            
            <div class="col-md-8">
                @Html.EditorFor(model => model.AmountBilledOnInvoice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AmountBilledOnInvoice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
