@model GenomeNext.Data.EntityModel.GNSampleType

@{
    ViewBag.Title = "Delete";
}

<h2>
    <span class="glyphicon glyphicon-tint gn-green"></span>
    @ViewBag.Title
    <span class="pull-right">
        @Html.BootstrapActionButton("Back to List", "Index", "SampleTypes", null, "info", "chevron-right", null, true)
    </span>
</h2>

@Html.BootstrapRowSpacer()

<div class="form-horizontal">

