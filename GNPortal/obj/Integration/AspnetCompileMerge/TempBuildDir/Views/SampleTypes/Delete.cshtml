    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TypeValue)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypeValue)
        </dd>

        <dd>
            @using (Html.BeginForm())
            {
