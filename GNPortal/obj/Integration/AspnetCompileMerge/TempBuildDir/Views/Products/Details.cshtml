@model GenomeNext.Data.EntityModel.GNProduct

@{
    ViewBag.Title = "Details";
}

<h2>
    <span class="glyphicon glyphicon-euro gn-green"></span>
    @ViewBag.Title

    <span class="pull-right">
        @Html.BootstrapActionButton("Back to List", "Index", "Products", null, "info", "chevron-left")
        @Html.BootstrapActionButton("Edit", "Edit", "Products", new RouteValueDictionary(new { id = Model.Id }), "warning", "cog")
    </span>
</h2>
@Html.BootstrapRowSpacer()

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.BootstrapRowSpacer()
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ProductType)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductType.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AccountType)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AccountType.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Cost)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cost)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                @if (Model.ProductType.CanSubscribe)
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.SubscribeFrequency)
                    </dt>

                    <dd>
                        @(((GenomeNext.Data.EntityModel.GNAccountProductSubscription.SubscriptionFrequencyInterval)Model.SubscribeFrequency).ToString())
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MinRangeValue)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MinRangeValue)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MaxRangeValue)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaxRangeValue)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ValueUnits)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ValueUnits)
                    </dd>
                }

                @{
                    ViewData["ViewMode"] = "Details";
                    ViewData["CreatedBy"] = Model.CreatedByContact;
                    ViewData["CreateDateTime"] = Model.CreateDateTime;
                }
                @Html.Partial("_AuditModelPartial", null, ViewData)

            </dl>
        </div>
    </div>
}