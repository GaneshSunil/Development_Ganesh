@model GenomeNext.Data.EntityModel.GNCloudFile

@{
    ViewBag.Title = "Delete File";
}

<h2>
    <span class="glyphicon glyphicon-cloud gn-green"></span>
    @ViewBag.Title
    <span class="pull-right">
        @if (!string.IsNullOrEmpty(Request["sampleId"]))
        {
            @Html.BootstrapActionButton("Back to Sample", "Edit", "Samples", new RouteValueDictionary(new { id = Request["sampleId"], analysisRequestId = Request["analysisRequestId"] }), "info", "chevron-left")
        }
        else
        {
            @Html.BootstrapActionButton("Back to List", "Index", "CloudFiles", null, "info", "chevron-left")
        }
        @Html.BootstrapFormConfirmDeleteButton("Delete", "trash", "danger")
    </span>
</h2>

@Html.BootstrapRowSpacer()

<div class="form-horizontal">

    @Html.BootstrapRowSpacer()

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FileURL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileURL)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Volume)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Volume)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FolderPath)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FolderPath)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FileName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FileSize)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileSize)
        </dd>

        @{
            ViewData["ViewMode"] = "Details";
            ViewData["CreatedBy"] = Model.CreatedByContact;
            ViewData["CreateDateTime"] = Model.CreateDateTime;
        }
        @Html.Partial("_AuditModelPartial", null, ViewData)

        <dt>
        </dt>
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.Hidden("analysisRequestId", (string)ViewBag.AnalysisRequestId)
                @Html.Hidden("sampleId", (string)ViewBag.SampleId)
            }
        </dd>

    </dl>
</div>
