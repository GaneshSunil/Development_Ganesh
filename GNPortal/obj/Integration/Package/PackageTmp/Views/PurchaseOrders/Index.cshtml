@model IEnumerable<GenomeNext.Data.EntityModel.GNPurchaseOrder>

@{
    ViewBag.Title = "Purchase Orders";
}

<h2>
    <span class="glyphicon glyphicon-th gn-green"></span>
    @ViewBag.Title
</h2>

@Html.BootstrapRowSpacer()

<div class="table-responsive">
    <table class="table table-hover table-bordered table-gn">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExternalPONum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrderInvoices)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalApplied)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Organization.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExternalPONum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseOrderInvoices.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalApplied)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    @Html.BootstrapActionButton("View", "Details", "PurchaseOrders", new RouteValueDictionary(new { id = item.Id }), "success", "th-large", "sm")
                    @Html.BootstrapActionButton("Edit", "Edit", "PurchaseOrders", new RouteValueDictionary(new { id = item.Id }), "warning", "cog", "sm")
                    @Html.BootstrapActionButton("Delete", "Delete", "PurchaseOrders", new RouteValueDictionary(new { id = item.Id }), "danger", "trash", "sm")
                </td>
            </tr>
        }

    </table>
</div>