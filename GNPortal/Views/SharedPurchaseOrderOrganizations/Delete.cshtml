@model GenomeNext.Data.EntityModel.GNSharedPurchaseOrderOrganization

@{
    ViewBag.Title = "Share PO record";
}


@Html.BootstrapRowSpacer()

<h2>
    <span class="glyphicon glyphicon-cloud gn-green"></span>
    @ViewBag.Title
    <span class="pull-right">
        @Html.BootstrapActionButton("Back to List", "Index", "GNSharedPurchaseOrderOrganization", null, "info", "chevron-right", null, true)
    </span>
</h2>

<div class="form-horizontal">

    <h4>Please confirm you want to delete this record:</h4>
    <hr />

        <dl class="dl-horizontal">
            <dt>
                Organization
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GNInvoice.Account.Organization.Name)
            </dd>

            <dt>
                Invoice
            </dt>

            <dd>
                Id: <span class="small">@Html.DisplayFor(model => model.GNInvoice.Id)</span>
                <br />Start date: @Html.DisplayFor(model => model.GNInvoice.InvoiceStartDate)
                <br />Cycle: @Html.DisplayFor(model => model.GNInvoice.InvoiceCycle)
            </dd>

            <dt>
                Purchase Order
            </dt>

            <dd>
                Id: <span class="small">@Html.DisplayFor(model => model.GNPurchaseOrder.Id)</span>
                <br />External PO #: @Html.DisplayFor(model => model.GNPurchaseOrder.ExternalPONum)
                <br />Current Balance: @Html.DisplayFor(model => model.GNInvoice.Balance)
            </dd>

            <dt>
                Amount Billed on Invoice
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AmountBilledOnInvoice)
            </dd>

            <dt>
                Created By
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>

            <dt>
                Created On
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateDateTime)
            </dd>


            <dd>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("organizationId", Request["organizationId"])

                    <button type="submit" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>
                        Delete
                    </button>
                }
            </dd>
        </dl>


</div>