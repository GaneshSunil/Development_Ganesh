@model IEnumerable<GenomeNext.Data.EntityModel.AWSRegion>

@{
    ViewBag.Title = "AWS Regions";
}

<h2>
    <span class="glyphicon glyphicon-cloud gn-green"></span>
    @ViewBag.Title
    <span class="pull-right">
        @Html.BootstrapActionButton("Create New", "Create", "AWSRegions", new RouteValueDictionary(new { organizationId = Request["organizationId"] }), "info", "plus")
    </span>
</h2>

@Html.BootstrapRowSpacer()

<div class="table-responsive">
    <table class="table table-hover table-bordered table-gn">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AWSRegionSystemName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AWSRegionSystemName)
                </td>
                <td>
                    @Html.BootstrapActionButton("View", "Details", "AWSRegions", new RouteValueDictionary(new { id = item.AWSRegionSystemName }), "success", "th-large", "sm")
                    @Html.BootstrapActionButton("Edit", "Edit", "AWSRegions", new RouteValueDictionary(new { id = item.AWSRegionSystemName }), "warning", "cog", "sm")
                    @Html.BootstrapActionButton("Delete", "Delete", "AWSRegions", new RouteValueDictionary(new { id = item.AWSRegionSystemName }), "danger", "trash", "sm")
                </td>
            </tr>
        }

    </table>
</div>

