@model IEnumerable<GenomeNext.Data.EntityModel.GNGene>

@{
    ViewBag.Title = "Genes";
}

<h2>
    <span class="glyphicon glyphicon-envelope gn-green"></span>
    @ViewBag.Title
    <span class="pull-right">
        @Html.BootstrapActionButton("Create New", "Create", "Genes", new RouteValueDictionary(new { organizationId = Request["organizationId"] }), "info", "plus")
    </span>
</h2>

@Html.BootstrapRowSpacer()

<div class="table-responsive">
    <table class="table table-hover table-bordered table-gn">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chromosome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isoform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CytoBand)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GeneCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chromosome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isoform)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CytoBand)
                </td>
                <td>
                    @Html.BootstrapActionButton("View", "Details", "Genes", new RouteValueDictionary(new { id = item.Id }), "success", "th-large", "sm")
                    @Html.BootstrapActionButton("Edit", "Edit", "Genes", new RouteValueDictionary(new { id = item.Id }), "warning", "cog", "sm")
                    @Html.BootstrapActionButton("Delete", "Delete", "Genes", new RouteValueDictionary(new { id = item.Id }), "danger", "trash", "sm")
                </td>
            </tr>
        }

    </table>

</div>